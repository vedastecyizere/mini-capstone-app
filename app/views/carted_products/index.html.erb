<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
  <h2> Hello <%= @order.carted_products.last.order.user.name %>, here is your shopping cart </h2>

    <table class="table">
      <tr>
        <th>Product Name</th>
        <th>Image</th>
        <h>Quantity</th>
        <th>Price</th>   
      </tr>

      <% @order.carted_products.each do |cart| %>
      <tr>
        <td><%= cart.product.name %></td>
        <td><img class="img" src="<%= cart.product.images.first.url %>" class="img-responsive"></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.product.price %></td>
      </tr>
      <% end %>
    </table>
    <% button_to "Buy Now", "/orders/#{@order.id}", method: :patch %>
  </div>  
</div>
